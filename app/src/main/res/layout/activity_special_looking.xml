<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gung_ticket.SpecialLookingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--앱 바-->
        <include
            android:layout_height="60dp"
            android:layout_width="match_parent"
            layout="@layout/actionbar_reservarion"/>



    </RelativeLayout>
    <!-- 안내 문구1 -->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="3dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:text="날짜 선택"
            android:textSize="@dimen/textSize_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
        android:layout_marginBottom="65dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CalendarView
                android:id="@+id/calendar_special"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                ></CalendarView>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- 안내 문구2 -->
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_gravity="center_vertical"
                        android:text="인원 선택"
                        android:textSize="@dimen/textSize_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--일반인-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/btn_normalperson"
                            android:src="@drawable/booking_special_normal_button_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:padding="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:textSize="13sp"
                            android:text="23/3500"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <!--한복착용자-->
                    <RelativeLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/btn_hanbok"
                            android:src="@drawable/booking_special_hanbok_button_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:padding="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:textSize="13sp"
                            android:text="23/3500"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <!--만 65세 이상-->
                    <RelativeLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/btn_old"
                            android:src="@drawable/booking_special_old_button_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:padding="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:textSize="13sp"
                            android:text="23/3500"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>
                <!--대인 가감 버튼-->
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/gyeongbokgung_booking_circle_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="대인"
                        android:textSize="@dimen/textSize_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/adult_minus_special"
                                android:src="@drawable/minus_button"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />
                            <TextView
                                android:id="@+id/adult_number_special"
                                android:layout_margin="10dp"
                                android:textStyle="bold"
                                android:textSize="@dimen/reservation_info"
                                android:text="3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <ImageView
                                android:id="@+id/adult_plus_special"
                                android:src="@drawable/plus_button"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <!--하단 설명-->
                <TextView
                    android:layout_marginLeft="20dp"
                    android:textSize="10sp"
                    android:text="※  한 사람당 최대 4매 예매 가능합니다."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- 안내 문구3 -->
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_gravity="center_vertical"
                        android:text="시간 선택"
                        android:textSize="@dimen/textSize_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <!--시간 선택 버튼 레이아웃-->
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--time1-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/btn_time1"
                            android:src="@drawable/booking_special_time_button_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RelativeLayout
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/time1"
                                android:textStyle="bold"
                                android:textColor="#ffffff"
                                android:textSize="10sp"
                                android:text="10:00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_below="@id/time1"
                                android:textStyle="bold"
                                android:textColor="#ffffff"
                                android:textSize="10sp"
                                android:text="2/100"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <!--time2-->
                    <RelativeLayout
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/btn_time2"
                            android:src="@drawable/booking_special_time_button_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RelativeLayout
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/time2"
                                android:textStyle="bold"
                                android:textColor="#ffffff"
                                android:textSize="10sp"
                                android:text="10:00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_below="@id/time2"
                                android:textStyle="bold"
                                android:textColor="#ffffff"
                                android:textSize="10sp"
                                android:text="2/100"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <!--time3-->
                    <RelativeLayout
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/btn_time3"
                            android:src="@drawable/booking_special_time_button_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RelativeLayout
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/time3"
                                android:textStyle="bold"
                                android:textColor="#ffffff"
                                android:textSize="10sp"
                                android:text="10:00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_below="@id/time3"
                                android:textStyle="bold"
                                android:textColor="#ffffff"
                                android:textSize="10sp"
                                android:text="2/100"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/payment_special"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@color/special"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:text="결제하기"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="@dimen/textSize_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    </RelativeLayout>


</LinearLayout>